<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_layanan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="12dp">

        <TextView
            android:id="@+id/id_layanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#577BC1"
            android:fontFamily="@font/poppinsmediumitalic"
            android:textColor="@color/white"
            android:padding="5dp"
            android:text="@string/card_layanan_id"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_namalayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_layanan_nama"
            android:paddingStart="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_layanan_harga"
            android:paddingStart="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_layanancabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/card_layanan_cabang"
            android:paddingStart="10dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="15sp"
            />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            >


        </GridLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>