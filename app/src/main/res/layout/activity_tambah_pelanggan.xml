<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahPelanggan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvJudul"
        android:text="TAMBAH PELANGGAN"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNama"
        android:text="Nama"
        app:layout_constraintTop_toBottomOf="@+id/tvJudul"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etNamaLengkap"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNama"
        android:padding="10dp"
        android:fontFamily="@font/poppinsmediumitalic"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAlamat"
        android:text="Alamat"
        app:layout_constraintTop_toBottomOf="@+id/etNamaLengkap"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etAlamat"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Alamat"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAlamat"
        android:padding="10dp"
        android:fontFamily="@font/poppinsmediumitalic"
        android:background="@drawable/edit_text_border"        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNoHp"
        android:text="No HP Aktif"
        app:layout_constraintTop_toBottomOf="@+id/etAlamat"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etNoHp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="No HP Aktif"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNoHp"
        android:padding="10dp"
        android:fontFamily="@font/poppinsmediumitalic"
        android:background="@drawable/edit_text_border"        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/buttonSimpan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:backgroundTint="#6200EE"
        android:padding="12dp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/etNoHp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>