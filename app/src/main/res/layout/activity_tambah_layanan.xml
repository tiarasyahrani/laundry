<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bglaundryyrill"
    tools:context=".Tambah_Layanan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvJudul_layanan"
        android:text="@string/card_tambah_layanan"
        android:layout_marginTop="80dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNama_layanan"
        android:text="@string/card_tambah_nama_layanan"
        app:layout_constraintTop_toBottomOf="@+id/tvJudul_layanan"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etNama_layanan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/card_tambah_nama_layanan"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNama_layanan"
        android:padding="10dp"
        android:fontFamily="@font/poppinsblackitalic"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tvHarga_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_tambah_harga_layanan"
        app:layout_constraintTop_toBottomOf="@+id/etNama_layanan"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etHarga_layanan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/card_tambah_harga_layanan"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHarga_layanan"
        android:padding="10dp"
        android:maxLength="10"
        android:fontFamily="@font/poppinsblackitalic"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tvTambah_Cabang_layanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_tambah_cabang_layanan"
        app:layout_constraintTop_toBottomOf="@+id/etHarga_layanan"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_Tambah_Cabang_layanan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/card_tambah_cabang_layanan"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTambah_Cabang_layanan"
        android:padding="10dp"
        android:fontFamily="@font/poppinsblackitalic"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />


    <Button
        android:id="@+id/buttonSimpan_layanan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/card_tambah_layanan_simpan"
        android:backgroundTint="#133E87"
        android:padding="12dp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/et_Tambah_Cabang_layanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>