<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landbg"
    tools:context=".tambah_cabang">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvJudul_cabang"
        android:text="@string/card_tambahan_cabang"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:layout_marginEnd="500dp"
        android:textStyle="bold"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNama_cabang"
        android:text="@string/card_tambah_nama_cabang"
        app:layout_constraintTop_toBottomOf="@+id/tvJudul_cabang"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="150dp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/etNama_cabang"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/card_tambah_nama_cabang"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJudul_cabang"
        android:padding="10dp"
        android:layout_marginStart="150dp"
        android:fontFamily="@font/poppinsmediumitalic"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tvAlamat_cabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_tambah_alamat_cabang"
        app:layout_constraintTop_toBottomOf="@+id/etNama_cabang"
        android:textSize="18sp"
        android:layout_marginStart="150dp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/etAlamat_cabang"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/card_tambah_alamat_cabang"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNama_cabang"
        android:padding="10dp"
        android:layout_marginStart="150dp"
        android:fontFamily="@font/poppinsmediumitalic"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tvTambah_layanan_cabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_tambah_layanan_cabang"
        app:layout_constraintTop_toBottomOf="@+id/etAlamat_cabang"
        android:textSize="18sp"
        android:layout_marginStart="150dp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_Tambah_layanan_cabang"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/card_tambah_layanan_cabang"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAlamat_cabang"
        android:padding="10dp"
        android:layout_marginStart="150dp"
        android:fontFamily="@font/poppinsmediumitalic"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        />


    <Button
        android:id="@+id/buttonSimpan_cabang"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/card_tambah_cabang_simpan"
        android:backgroundTint="#133E87"
        android:padding="12dp"
        android:fontFamily="@font/poppinssemibold"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/et_Tambah_layanan_cabang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>