<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landbg"
    android:padding="30dp"
    tools:context=".tambah_tambahkan">

    <TextView
        android:id="@+id/fab_tambah_tambahkan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tambah_tambahan"
        android:layout_marginTop="0dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/poppinsbold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_nama_tambahkan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tambahan_nama"
        android:textSize="20sp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fab_tambah_tambahkan"
        />
    <EditText
        android:id="@+id/et_nama_tambahkan"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/tambahan_nama"
        android:textSize="20sp"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/fab_tambah_tambahkan"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="18dp"
        android:layout_marginStart="110dp"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp" />


    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tambahan_harga"
        android:textSize="20sp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nama_tambahkan"
        />
    <EditText
        android:id="@+id/et_harga"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="@string/tambahan_harga"
        android:textSize="20sp"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_nama_tambahkan"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="18dp"
        android:layout_marginStart="110dp"
        android:background="@drawable/edit_text_border"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp" />


    <Button
        android:id="@+id/bt_simpan_tambahkan"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:text="@string/tambah_tambahanlayanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsbold"
        android:backgroundTint="#133E87"
        app:layout_constraintTop_toBottomOf="@id/et_harga"
        />


</androidx.constraintlayout.widget.ConstraintLayout>