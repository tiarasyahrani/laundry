<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tv_card_pegawai"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:elevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_pegawai_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#608BC1"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="@string/card_pegawai_id"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/id_pegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#608BC1"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textColor="@color/black"
                android:padding="5dp"
                android:text="-"
                android:textSize="16sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_namapegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_nama"
                android:paddingStart="10dp"
                android:fontFamily="@font/poppinsbold"
                android:textStyle="bold"
                android:textSize="18sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_alamatpegawai_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_alamat"
                android:paddingStart="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_alamatpegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingStart="10dp"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textStyle="bold"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nohppegawai_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_nohp"
                android:paddingStart="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppinssemibold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_nohppegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingStart="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textSize="15sp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_terdaftarpegawai_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_terdaftar"
                android:paddingStart="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:textStyle="bold"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tv_terdaftarpegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingStart="10dp"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textStyle="bold"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cabangpegawai_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_cabang"
                android:paddingStart="10dp"
                android:fontFamily="@font/poppinssemibold"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_cabangpegawai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:paddingStart="10dp"
                android:fontFamily="@font/poppinsmediumitalic"
                android:textStyle="bold"
                android:textSize="15sp"
                />
        </LinearLayout>



        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="250dp"
            android:layout_marginEnd="5dp"
            >

            <Button
                android:id="@+id/bt_hubungipegawai"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_hubungi"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginStart="5dp"
                android:backgroundTint="#133E87"
                />
            <Button
                android:id="@+id/bt_lihatpegawai"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="@string/card_pegawai_lihat"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                />

        </GridLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>